<%- include("../partials/header") %>
<div class="container">
  <div class="row">
    <div class="col-md-10">
      <div class="card">
        <img class="card-img-top" src="<%= campground.img %>" />
        <div class="card-body">
          <h5 class="card-title"><%= campground.name %></h5>
          <p class="card-text"><%= campground.description %></p>
          <div>
            <i>submitted by - <%= campground.author.username%></i>
          </div>
          <div>
            <form class="button-inline" action="/campgrounds/<%= campground._id %>/edit" method="GET">
              <button class="btn btn-sm btn-warning">EDIT</a>
            </form>
            <form class="button-inline" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
              <button class="btn btn-sm btn-danger">DELETE</a>
            </form>
          </div>
        </div>
        <div class="card-footer">
          <ul>
            <% campground.comments.forEach(comment => { %>
            <li><%= comment.author.username %> - <%= comment.text %></li>
            <%});%>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include("../partials/footer") %>