<%- include('../partials/header') %>
<div class="container">
  <header class="jumbotron">
    <h1>Welcome to YelpCamp</h1>
    <p>view our hand-picked campgrounds from all over the world</p>
    <p>
      <a class="btn btn-primary" href="/campgrounds/new">add new campground</a>
    </p>
  </header>
  <div class="row d-flex">
    <% campgrounds.forEach(campground => { %>
    <div class="col-lg-3 col-md-6 col-sm-12 d-flex justify-content-center">
      <!--  -->
      <div id="card" class="ui card mb-4">
        <div class="image">
          <img class="card-img-top" src="<%= campground.img%>" />
        </div>
        <div class="content">
          <div class="header text-center mb-2">
            <%= campground.name %>
          </div>
          <div class="right floated meta"><%= campground.created.toLocaleDateString()%></div>
          <img class="ui avatar image"
            src="https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcTw_2ParYXJZ9BWUUJ8fTioVDdqPe0bbBJ9-rhl4kkBeUFxcLP3&usqp=CAU">
          <span class="text-secondary">
            <%= campground.author.username%>
          </span>
        </div>
        <div class="content">
          <a href="/campgrounds/<%= campground._id %>">
            <span class="right floated">
              <i class="angle double right icon"></i>view
            </span>
          </a>
          <i class="comment icon"></i>
          <span class="text-secondary">
            <%= campground.comments.length%> comments
          </span>
        </div>
      </div>
      <!--  -->
    </div>
    <% }) %>
  </div>
</div>
<%- include('../partials/footer') %>