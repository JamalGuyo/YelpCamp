<%- include('../partials/header') %>
<div class="container">
  <header class="jumbotron">
    <h1>Welcome to YelpCamp</h1>
    <p>view our hand-picked campgrounds from all over the world</p>
    <p>
      <a class="btn btn-primary" href="/campgrounds/new">add new campground</a>
    </p>
  </header>
  <div class="row">
    <% campgrounds.forEach(campground => { %>
    <div class="col-md-3 col-sm-6">
      <div class="card mb-5">
        <img class="card-img-top" src="<%= campground.img %>" />
        <div class="card-body">
          <div class="d-flex justify-content-between">
            <h5 class="card-title"><%= campground.name %></h5>
            <h5 class="card-title text-secondary">Ksh.<%= campground.price %></h5>
          </div>
          <p class="card-text text-secondary">
            <%= campground.description.substring(0,21)%>...
          </p>
        </div>
        <div class="card-footer">
          <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>">More info...</a>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</div>
<%- include('../partials/footer') %>