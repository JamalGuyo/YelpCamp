<%- include('../partials/header') %>
<div class="container">
  <div class="row d-flex justify-content-center mb-2">
    <header>
      <h1>Create a new campground</h1>
    </header>
  </div>
  <div class="row d-flex justify-content-center">
    <div class="col-md-6 col-sm-12">
      <form action="/campgrounds" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="campground[name]" placeholder="campground name" />
        </div>
        <div class="form-group">
          <input class="form-control" type="number" name="campground[price]" placeholder="price" min="0" step="1" />
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="campground[image]" placeholder="image url" />
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="campground[desc]" placeholder="description" />
        </div>
        <button class="btn btn-primary" type="submit">Submit</button>
      </form>
      <a href="/campgrounds">show all campgrounds</a>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>