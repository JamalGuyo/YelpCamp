<%- include('../partials/header') %>
<div class="container">
    <div class="row d-flex justify-content-center">
        <header>
            <h1>Edit <%= campground.name%></h1>
        </header>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="col-md-8 col-sm-12">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[name]" value="<%= campground.name%>" />
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[price]" value="<%= campground.price%>" />
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[img]" value="<%= campground.img%>" />
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" rows="10"
                        name="campground[description]"><%= campground.description%></textarea>
                </div>
                <button class="btn btn-primary" type="submit">Submit</button>
            </form>
            <a href="/campgrounds">show all campgrounds</a>
        </div>
    </div>
</div>
<%- include('../partials/footer') %>