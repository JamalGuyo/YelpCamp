<%- include('../partials/header') %>
<div class="container">
  <div class="row">
    <header>
      <h1>Add a comment to <%= campground.name%></h1>
    </header>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <form action="/campgrounds/<%=campground._id%>/comments" method="POST">
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="comment[text]"
            placeholder="comment..."
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="comment[author]"
            placeholder="author name"
          />
        </div>
        <button class="btn btn-primary" type="submit">Submit</button>
      </form>
      <a href="/campgrounds/<%= campground._id%>">go back</a>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>
